---
interface Props {
  thumbnail: string | undefined;
  summary: string | undefined;
  title: string;
  techno: string[];
}

const { thumbnail, title, summary, techno } = Astro.props;
console.log(techno);
---

<div class="meta-description">
  <div class="container">
    <!-- <img class="object-cover" src={thumbnail} alt={title} /> -->
  </div>
  <div class="meta">
    <div class="container">
      <div class="container-narrow">
        <div class="info">
          <h1>{title.replace(/[^\p{L}\p{N}\s]/gu, "").trim()}</h1>
        </div>

        <div class="description">
          <p>{summary}</p>
        </div>

        <div class="techno">
          <div class="tags list-none decoration-none flex gap-1">
            {techno.map((i) => <span class="tag"> {i} </span>)}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .meta-description {
    display: block;
    position: sticky;
    top: 60px;
    height: fit-content;
  }

  .techno__item span {
    font-family: "Departure Mono" !important;
  }

  .meta h1 {
    /* font-family: "Inter" !important; */
    font-family: "Departure Mono" !important;
    font-style: normal;
    font-size: 4rem;
    line-height: 0.9;
  }
</style>
