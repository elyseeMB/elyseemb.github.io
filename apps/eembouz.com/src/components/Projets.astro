---
import { getCollection } from "astro:content";
const projects = await getCollection("projects");

console.log(projects);
---

<section class="projects">
  <h3 class="projects__title">Projects completed</h3>
  <div class="grid">
    {
      projects
        .sort((a, b) =>
          new Date(a.data.pubDate!).getTime() <
          new Date(b.data.pubDate!).getTime()
            ? 1
            : -1
        )
        .map((project) => (
          <div class="frameworks">
            <ul class="list">
              <div class="link">
                <li class="framework">
                  <a href={"projects/" + project.id}>
                    <span class="framework__name"> {project.data.title}</span>
                  </a>
                  <span class="framework__description">
                    {project.data.description}
                  </span>
                </li>
              </div>
            </ul>
          </div>
        ))
    }
  </div>
</section>

<style>
  .projects__title {
    font-size: 2.5rem !important;
    padding-bottom: 2rem;
  }

  .projects {
    width: 100%;
    height: 100%;
    padding-bottom: 5rem;
  }

  .projects ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .projects ul li::before {
    content: "â€¢";
    margin-right: 0.5em;
  }

  .techo__name {
    font-family: "Inter" !important;
    letter-spacing: normal;
    font-weight: 100 !important;
    padding-bottom: 1rem;
  }

  .frameworks .list {
    display: flex;
    flex-direction: column;
    gap: 0;
    line-height: 1.6;
  }

  @media only screen and (min-width: 1370px) {
    .frameworks .list li {
      list-style: disc;
      padding-bottom: 0.5rem;
      text-wrap: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 700px;
      display: block;
    }
  }

  @media only screen and (max-width: 930px) {
    .frameworks .list li {
      list-style: disc;
      padding-bottom: 0.5rem;
      text-wrap: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 600px;
      display: block;
    }
  }

  @media only screen and (max-width: 700px) {
    .frameworks .list li {
      list-style: disc;
      padding-bottom: 0.5rem;
      text-wrap: nowrap;
      overflow: hidden;
