---
import { getCollection } from "astro:content";
import { getTranslator, filterLang } from "../libs/i18n.ts";
import type { CollectionEntry } from "astro:content";
import { prefixWithSlash } from "../functions/string.ts";

const projects = await getCollection(
  "projects",
  filterLang(Astro.currentLocale)
);

const __ = await getTranslator(Astro.currentLocale);

function buildUrl(item: CollectionEntry<"projects">): string {
  return (
    "/" +
    (item.id.includes("/")
      ? item.id.replace("/", "/projects/")
      : `projects/${item.id}`)
  );
}
---

<section class="projects animate-fade-in animation-delay-300">
  <h3 data-h3-portfolio class="projects__title">
    {__(prefixWithSlash("Projects completed"))}
  </h3>
  <div class="flex flex-col text-[var(--color-secondary)]">
    {
      projects
        .sort((a, b) =>
          new Date(a.data.pubDate!).getTime() <
          new Date(b.data.pubDate!).getTime()
            ? 1
            : -1
        )
        .map((project) => (
          <div class="frameworks">
            <ul class="list">
              <div class="link">
                <li class="framework">
                  <a href={buildUrl(project)}>
                    <span class="framework__name"> {project.data.title}</span>
                  </a>
                  <span class="framework__description">
                    {__(project.data.description!)}
                  </span>
                </li>
              </div>
            </ul>
          </div>
        ))
    }
  </div>
</section>

