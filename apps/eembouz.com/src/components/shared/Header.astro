---
import HeaderComponent from "@portfolio/ui/Header";
import { getTranslator } from "../../libs/i18n.ts";
const __ = await getTranslator(Astro.currentLocale);
---

<div class="container-narrow">
  <HeaderComponent>
    <div class="actions">
      <a href="https://blog.eembouz.com">Blog</a>
      <button class="btn btn-primary">
        <span class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            ><path
              d="M13.0508 12.361L7.39395 18.0179L5.97974 16.6037L11.6366 10.9468L6.68684 5.99707H18.0006V17.3108L13.0508 12.361Z"
            ></path></svg
          >
        </span>
        <a href="mailto:contact@eembouz.com"> {__("Me contactez")} </a>
      </button>
    </div>
  </HeaderComponent>
</div>

<style>
  .actions {
    color: var(--color-primary);
    display: flex;
    align-items: center;
    gap: 2rem;
  }
</style>
