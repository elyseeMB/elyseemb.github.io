---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import { filterLang } from "../../../libs/i18n.ts";
import Page from "../../projects/_page.astro";

export const getStaticPaths = (async () => {
  const projects = await getCollection("projects", filterLang("en"));
  return projects.map((project) => ({
    params: { id: project.id.split("/").at(-1) },
    props: { project },
  }));
}) satisfies GetStaticPaths;
---

<Page {...Astro.props} />
