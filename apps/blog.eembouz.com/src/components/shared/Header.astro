---
import HeaderComponent from "@portfolio/ui/Header";
import { getLink, getTranslator } from "../../libs/i18n.ts";
const __ = await getTranslator(Astro.currentLocale);
const { pathname } = Astro.url;
const href = getLink(Astro, "/articles");
const isActive = pathname.startsWith(href);
---

<div class="container-narrow">
  <HeaderComponent>
    <div class="actions">
      <a href="https://eembouz.com">Portfolio</a>
      <a
        href={href}
        aria-current={isActive ? "page" : undefined}
        class="aria-[current=page]:text-[var(--contrast)]! transition-colors duration-300"
      >
        {__("Tous mes articles")}
      </a>
    </div>
  </HeaderComponent>
</div>

<style>
  .actions {
    display: flex;
    align-items: center;
    gap: 2rem;
    color: var(--color-primary);
  }

  .link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: background-color 0.3s;
    border-radius: var(--rounded);
    background-color: rgba(53, 53, 53, 0.249);
    padding: 0.5rem 0.8rem;
  }

  .link:hover {
    background-color: var(--hover-primary);
  }
</style>
