---
import { getCollection } from "astro:content";
import { filterLang, filterSeries } from "../libs/i18n.ts";
import type { CollectionEntry } from "astro:content";
import Collection from "./Collection.astro";
import type { ItemDisplayed, OptionsCollection } from "../../config.ts";
import { itemNormalizer } from "../functions/article.ts";
import Card from "./Card.astro";

interface Props {
  title?: string;
  limit?: number;
}

const allPages = await getCollection("blog", filterLang(Astro.currentLocale));

const { title, limit } = Astro.props;

const doc = itemNormalizer(allPages);

const options: OptionsCollection = {
  showYear: false,
};
---

<section class="blog">
  <div class="container">
    <!-- {
      title && (
        <h3 class="title animate-slide-in animation-delay-300">{title}</h3>
      )
    } -->
    <div class="flex flex-col divide-y divide-[var(--secondary)]">
      <div
        class="flex items-center gap-26 pb-5 animate-fade-in animation-delay-300"
      >
        <div>/ DATE</div>
        <div>/ NAME</div>
      </div>
      <div data-list__articles class="flex flex-1 flex-col">
        {doc.map((collection) => <Card {...collection} options={options} />)}
      </div>
    </div>
  </div>
  <!-- <div class="w-[400px]"></div> -->
</section>

<style>
  .blog {
    display: flex;
    padding-bottom: 5rem;
  }
  .blog a {
    display: inline-flex;
  }

  @media screen and (max-width: 590px) {
    .blog article.item h3 {
      line-height: 1.6;
    }
  }

  .blog h3.title {
    font-family: "Inter" !important;
    font-weight: 100;
    font-size: 2rem !important;
  }

  .blog p {
    padding: 0;
  }

  @media screen and (min-width: 1200px) {
    .blog {
      width: 100%;
      display: flex;
      justify-content: space-between;
      gap: 5rem;
      /* grid-template-columns: 600px 1fr; */
      padding-block: 5rem;
    }
  }
</style>
