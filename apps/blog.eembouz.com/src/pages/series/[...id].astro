---
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Chapiter } from "../../components/Chapiter.tsx";
import { Outline } from "../../components/Outline.jsx";
import { filterLang, getTranslator } from "../../libs/i18n.js";
import Info from "../../components/Info.astro";
import Collection from "../../components/Collection.astro";
import { getEntries } from "astro:content";
import Prose from "../../components/Prose.astro";
import type { ItemDisplayed, OptionsCollection } from "../../../config.ts";

interface Props {
  serie: CollectionEntry<"series">;
}

export const getStaticPaths = (async ({ paginate }) => {
  const series = await getCollection("series");

  return series.map((serie) => ({
    params: { id: serie.id.split("__")[0] },
    props: { serie },
  }));
}) satisfies GetStaticPaths;

const { serie } = Astro.props;

const { Content } = await render(serie);

const { title, author, pubDate, relatedPosts, summary } = serie.data;

const relatedPostsEntries = await Promise.all(
  relatedPosts
    ? relatedPosts?.map(
        async (item) => await getEntry(item.collection, item.id)
      )
    : []
);

const articles: ItemDisplayed[] = relatedPostsEntries.map((page) => {
  const [lang, ...slug] = page.id.split("/");
  return {
    params: { lang, slug: slug.join("/") || undefined },
    props: page,
  };
});

function groupPostsByYear(posts: ItemDisplayed[]) {
  const postsByYear: Record<string, ItemDisplayed[]> = {};

  for (const post of posts) {
    if (!post.props.data.pubDate) {
      continue;
    }
    const date = new Date(post.props.data.pubDate);
    const year = date.getFullYear().toString();
    if (!postsByYear[year]) {
      postsByYear[year] = [];
    }
    postsByYear[year].push(post);
  }

  for (const year of Object.keys(postsByYear)) {
    postsByYear[year].sort((a, b) => {
      if (!a.props.data.pubDate) return 1;
      if (!b.props.data.pubDate) return -1;

      return (
        new Date(b.props.data.pubDate).getTime() -
        new Date(a.props.data.pubDate).getTime()
      );
    });
  }

  return postsByYear;
}

const allPostsByYear = groupPostsByYear(articles);

const doc = Object.keys(allPostsByYear)
  .sort((a, b) => Number(b) - Number(a))
  .map((year) => ({
    year: year,
    items: allPostsByYear[year],
  }));

const options: OptionsCollection = {
  showYear: true,
};

const __ = await getTranslator(Astro.currentLocale);
---

<Layout>
  <section data-markdown>
    <div class="container">
      <div class="container-narrow">
        <Info
          summary={summary}
          serie={serie}
          title={title}
          author={author as CollectionEntry<"authors">}
          pubDate={pubDate}
        />
      </div>
    </div>

    <div class="container">
      <div class="container-narrow">
        <div class="divide-y divide-[var(--border-color)]">
          {
            doc.map((collection) => (
              <Collection {...collection} options={options} />
            ))
          }
        </div>
      </div>
    </div>

    <div class="container">
      <div class="wrapper-content pt-10">
        <Chapiter client:load />
        <Prose>
          <Content />
        </Prose>
        <div class="wrapper-outline">
          <Outline client:load />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .container,
  .wrapper-content {
    overflow: visible;
  }

  .article__paragraph {
    padding-block: 1rem;
  }

  .description {
    padding-block: 3rem;
  }

  .info {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .wrapper-content {
    /* max-width: 600px; */
    display: block;
  }

  .wrapper-outline {
    display: none;
  }

  @media screen and (min-width: 1200px) {
    .wrapper-content {
      width: 100%;
      display: grid !important;
      grid-template-columns: 1fr 600px 1fr !important;
      padding: 0;
    }

    .wrapper-outline {
      display: block;
      grid-column: 3;
      margin-bottom: 5rem;
    }
  }

  h1 {
    text-align: left;
    padding-top: 3rem;
    line-height: 1.4;
  }

  .cover {
    width: 100%;
  }

  .meta {
    display: flex;
    flex-direction: column;
    font-size: 0.9rem;
    gap: 0.5rem;
    padding-bottom: 4rem;
    font-family: "JetBrains Mono" !important;

    & > * {
      font-family: "JetBrains Mono" !important;
      letter-spacing: -0.5px;
      color: var(--color-secondary);
    }
  }

  @media screen and (max-width: 750px) {
    .wrapper-content {
      padding-inline: var(--container-padding);
    }
  }

  @media screen and (max-width: 590px) {
    .container-narrow .info .tags {
      align-items: flex-start;
      flex-direction: column;
    }
  }

  @media screen and (min-width: 1300px) {
    .heading {
      img {
        max-height: 500px;
      }
    }
  }
</style>
