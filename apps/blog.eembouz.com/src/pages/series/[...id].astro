---
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import Collection from "../../components/Collection.astro";
import Layout from "../../layouts/Layout.astro";
import ReadingTime from "../../components/ReadingTime.astro";
import { Outline } from "../../components/Outline.jsx";
import { filterLang, getTranslator } from "../../libs/i18n.js";
import Info from "../../components/Info.astro";
import { getEntries } from "astro:content";
import DateFormate from "../../components/DateFormate.astro";

interface Props {
  serie: CollectionEntry<"series">;
}

export const getStaticPaths = (async () => {
  const series = await getCollection("series");
  return series.map((serie) => ({
    params: { id: serie.id.split("__")[0] },
    props: { serie },
  }));
}) satisfies GetStaticPaths;

const { serie } = Astro.props;

const { Content } = await render(serie);

const { name, author, pubDate, relatedPosts, description } = serie.data;

const doc = await Promise.all(
  relatedPosts
    ? relatedPosts?.map(
        async (item) => await getEntry(item.collection, item.id)
      )
    : []
);

console.log(doc);

// const formatDate = Intl.DateTimeFormat(Astro.currentLocale, {
//   dateStyle: "long",
// }).format(pubDate);
// const writer = await getEntry(author.collection, author.id);

const __ = await getTranslator(Astro.currentLocale);
---

<Layout>
  <section data-markdown>
    <div class="container">
      <div class="container-narrow">
        <Info
          description={description}
          serie={serie}
          title={name}
          author={author as CollectionEntry<"authors">}
          pubDate={pubDate}
        />
      </div>
    </div>

    <div class="container">
      <div class="container-narrow">
        <div class="divide-y divide-[var(--border-color)]">
          {
            doc.map((collection) => (
              <div class="flex flex-col md:flex-row gap-2">
                <span class="text-[1.2rem] w-1/6 pt-4">{"year"}</span>

                <div
                  data-list__articles
                  class="flex flex-1 flex-col divide-y divide-[var(--border-color)]"
                >
                  <a href={collection.id.split("/")[1]}>
                    <article class="item flex items-center justify-between gap-4 py-4">
                      <div class="item__info">
                        <h3 class="item__title">{collection!.data.name}</h3>
                      </div>
                      <div>
                        <div class="meta">
                          <DateFormate date={collection!.data.pubDate} />
                        </div>
                      </div>
                    </article>
                  </a>
                </div>
              </div>
            ))
          }
        </div>
        <Content />
      </div>
    </div>
  </section>
</Layout>

<style>
  .container,
  .wrapper-content {
    overflow: visible;
  }

  .article__paragraph {
    padding-block: 1rem;
  }

  .description {
    padding-block: 3rem;
  }

  .info {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .wrapper-content {
    max-width: 600px;
    display: block;
  }

  .wrapper-outline {
    display: none;
  }

  @media screen and (min-width: 1200px) {
    .wrapper-content {
      width: 100%;
      display: grid !important;
      grid-template-columns: 1fr 550px 1fr !important;
      padding: 0;
    }

    .wrapper-outline {
      display: block;
      grid-column: 3;
      margin-bottom: 5rem;
    }

    .content {
      width: 550px;
      grid-column: 2;
      padding-bottom: 5rem;
    }
  }

  .content {
    padding-bottom: 5rem;
  }
  h1 {
    text-align: left;
    padding-top: 3rem;
    line-height: 1.4;
  }

  .cover {
    width: 100%;
  }

  @media screen and (max-width: 750px) {
    .wrapper-content {
      padding-inline: var(--container-padding);
    }
  }

  @media screen and (max-width: 590px) {
    .container-narrow .info .tags {
      align-items: flex-start;
      flex-direction: column;
    }
  }

  @media screen and (min-width: 1300px) {
    .heading {
      img {
        max-height: 500px;
      }
    }
  }
</style>
