---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { filterLang, getTranslator } from "../libs/i18n.ts";
import Collection from "../components/Collection.astro";
import type { OptionsCollection } from "../../config.ts";
import { normalizerItem } from "../functions/article.ts";

const filterSeries = (entry: CollectionEntry<"series">) => {
  if (!entry.filePath) {
    throw Error("file not found...");
  }
  return entry.filePath.endsWith(".json");
};

const docSeries = await getCollection("series", filterSeries);

const series = docSeries.map((item) => ({
  title: item.id.split("/")[0],
  ...item,
}));

const allPages = await getCollection("blog", filterLang(Astro.currentLocale));

const __ = await getTranslator(Astro.currentLocale);

const doc = normalizerItem([allPages, series]);

const options: OptionsCollection = {
  showYear: true,
};
---

<Layout>
  <div class="container container-narrow">
    <section class="blog-posts">
      <div class="divide-y divide-[var(--border-color)]">
        {
          doc.map((collection) => (
            <Collection {...collection} options={options} />
          ))
        }
      </div>
    </section>
  </div>
</Layout>

<style>
  .blog-posts h3.title {
    font-family: "Inter" !important;
    font-weight: 100;
    font-size: 2rem !important;
  }

  .blog-posts {
    padding-block: 3rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space);
  }
</style>
