---
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import ReadingTime from "../../components/ReadingTime.astro";
import { Outline } from "../../components/Outline.jsx";
import { filterLang, getTranslator } from "../../libs/i18n.js";
import Breadcrumb from "../../components/Breadcrumb.astro";
import Prose from "../../components/Prose.astro";
import Info from "../../components/Info.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

export const getStaticPaths = (async () => {
  const posts = await getCollection("blog", filterLang("fr"));
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;

const { Content, remarkPluginFrontmatter } = await render(post);

const {
  seo: seoProps,
  title,
  taxonomies,
  author,
  pubDate,
  contentType,
} = post.data;

const metaData = {
  title: post.data.title,
  description: post.data.summary,
  image: post.data.thumbnail,
  url: Astro.url.href,
  author: author.id,
  publishedDate: pubDate?.toISOString(),
};

const seo = seoProps ? seoProps : metaData;
const __ = await getTranslator(Astro.currentLocale);
---

<Layout {...seo}>
  <section data-markdown>
    <div class="container">
      <div class="container-narrow">
        <Info
          item={post}
          showSummary={false}
          taxonomies={taxonomies}
          readingTime={remarkPluginFrontmatter.stats.minutes}
        />
      </div>
    </div>

    <div class="container">
      <div class="container-narrow">
        <div class="heading">
          <div class="cover">
            <!-- <img src={thumbnail} alt="" /> -->
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="wrapper-content">
        <Prose>
          <Content />
        </Prose>
        <div class="wrapper-outline">
          <Outline client:load />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .container,
  .wrapper-content {
    overflow: visible;
  }

  .article__paragraph {
    padding-block: 1rem;
  }

  .description {
    padding-block: 3rem;
  }

  .info {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .wrapper-content {
    /* max-width: 600px; */
    display: block;
  }

  .wrapper-outline {
    display: none;
  }

  @media screen and (min-width: 1200px) {
    .wrapper-content {
      width: 100%;
      display: grid !important;
      grid-template-columns: 1fr 600px 1fr !important;
      padding: 0;
    }

    .wrapper-outline {
      display: block;
      grid-column: 3;
      margin-bottom: 5rem;
      justify-self: end;
    }
  }

  .content {
    padding-bottom: 5rem;
  }
  h1 {
    text-align: left;
    padding-top: 3rem;
    line-height: 1.4;
  }

  .cover {
    width: 100%;
  }

  .meta {
    display: flex;
    flex-direction: column;
    font-size: 0.9rem;
    gap: 0.5rem;
    padding-bottom: 4rem;
    font-family: "JetBrains Mono" !important;

    & > * {
      font-family: "JetBrains Mono" !important;
      letter-spacing: -0.5px;
      color: var(--color-secondary);
    }
  }

  /*  */

  @media screen and (max-width: 590px) {
    .container-narrow .info .tags {
      align-items: flex-start;
      flex-direction: column;
    }
  }

  @media screen and (min-width: 1300px) {
    .heading {
      img {
        max-height: 500px;
      }
    }
  }
</style>
