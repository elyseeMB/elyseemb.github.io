  <section data-markdown>
    <div class="container">
      <div class="container-narrow">
        <Info
          item={item}
          showSummary={false}
          taxonomies={taxonomies}
          readingTime={remarkPluginFrontmatter.stats.minutes}
        />
      </div>
    </div>

