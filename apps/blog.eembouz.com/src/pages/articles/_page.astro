---
import { render, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Outline } from "../../components/Outline.jsx";
import Prose from "../../components/Prose.astro";
import Info from "../../components/Info.astro";
import { Chapiter } from "../../components/Chapiter.jsx";

interface Props {
  item: CollectionEntry<"blog">;
}

const { item } = Astro.props;
const { Content, remarkPluginFrontmatter } = await render(item);

const { seo: seoProps, taxonomies, author, pubDate } = item.data;

const metaData = {
  title: item.data.title,
  description: item.data.summary,
  image: item.data.thumbnail,
  url: Astro.url.href,
  author: author.id,
  publishedDate: pubDate?.toISOString(),
};

const seo = seoProps ? seoProps : metaData;
---

