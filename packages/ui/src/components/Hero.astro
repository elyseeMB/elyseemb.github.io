---
import { getRelativeLocaleUrl } from "astro:i18n";

export function getLink(
  astro: { currentLocale?: string },
  path: string
): string {
  if (path === "/" && astro.currentLocale !== "fr") {
    return `/${astro.currentLocale}`;
  }

  return astro.currentLocale
    ? getRelativeLocaleUrl(astro.currentLocale, path)
    : path;
}

interface Props {
  title: string;
  description: string;
  job?: string;
}

const { title, description } = Astro.props;
const href = getLink(Astro, "/articles");
---

<section class="hero">
  <div class="title">
    <h1 class="split">
      {title}
    </h1>

    <div class="wrapper-description">
      <p class="description animate-blur-in animation-delay-300">
        {description}
      </p>
    </div>

    <div class="about description animate-fade-in animation-delay-300">
      <div class="btn-fixed">
        <div class="btn btn-round is-inview">
          <a
            href={href}
            class="btn-click magnetic"
            data-strength="100"
            data-strength-text="50"
          >
            <div class="btn-fill"></div>
            <span class="btn-text" style="transform: rotate(0.001deg);">
              <span class="btn-text-inner">recents</span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about .btn-fixed {
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(-50%, -50%);
    z-index: 20;
  }

  .about {
    font-size: 0.8rem;
    position: relative;
    border-bottom: 1px solid var(--border);
  }

  .title {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .wrapper-description {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
  }

  .description {
    font-family: "Work Sans", sans-serif;
    text-transform: uppercase;
    font-size: 0.875rem;
    line-height: 1.25rem;
    margin: 0;
    padding: 0;
    text-wrap: pretty;
    grid-column: 1 / span 3;
  }

  .title h1 {
    font-family: "Work Sans", sans-serif;
    text-transform: uppercase;
    text-align: left;
    font-size: 1.5rem;
    letter-spacing: -1px;
    overflow: hidden;
    line-height: 1;
  }

  @media screen and (min-width: 1350px) {
    .description {
      max-width: 650px !important;
    }
  }

  /* Desktop (769px et plus) */
  @media only screen and (min-width: 769px) {
    .wrapper {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
      place-items: flex-start;
    }
  }
</style>
