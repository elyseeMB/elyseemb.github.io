---
interface Props {
  title: string;
  description: string;
  job?: string;
}

const { title, description, job } = Astro.props;
---

<section class="hero container-narrow">
  <div class="wrapper">
    <div class="title animate-slide-in">
      <h1 class="split">{title}</h1>
    </div>
    <!-- {job && <span>{job}</span>} -->
    <p class="description animate-slide-in animation-delay-100">
      {description}
    </p>
  </div>
</section>

<style>
  .title {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .description {
    /* color: var(--color-primary); */
    font-style: italic;
    margin: 0;
    padding: 0;
  }

  .title h1 {
    text-align: left;
    font-size: 2.5rem;
    letter-spacing: -1px;
  }

  .wrapper span {
    font-weight: 100 !important;
    font-size: 1.5rem;
  }

  .icon {
    width: 25px;
    height: 25px;
  }

  img.hero-img {
    width: 100%;
    max-width: 500px;
    height: auto;
    display: block;
    object-fit: cover;
  }

  @media screen and (min-width: 1350px) {
    .description {
      max-width: 650px !important;
    }
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  strong {
    font-weight: 700;
  }

  /* Desktop (769px et plus) */
  @media only screen and (min-width: 769px) {
    .wrapper {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
      place-items: flex-start;
    }
  }
  .left {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    font-size: 0.9rem;
  }

  form.label input {
    background: transparent;
    border: none;
    outline: none;
    color: white;
  }

  input::placeholder {
    color: rgba(255, 255, 255, 0.484);
  }

  .icon {
    width: 24px;
    height: 24px;
  }
</style>
