---
import Redirect from "../Redirect.astro";
type Info = {
  title: string;
  description: string;
};

type Link = {
  title: string;
  href: string;
};

type Property = {
  name: string;
  url: string;
};

interface Props {
  info?: Info;
  links?: {title:string; items: Link[]};
  contacts?: {title:string; items: Link[]};
  property?: Property;
}

const { info, links, contacts, property } = Astro.props;

const locale = Astro.currentLocale?.includes("fr") ? "/" : Astro.currentLocale;
const url = new URL(locale ?? "/en", Astro.url.origin);
---

<footer>
  <div class="container">
    <div class="grid">
      <div class="left">
        <div class="info">
          <h4>{info?.title}</h4>
          <p>
            {info?.description}
          </p>
        </div>

        <div class="extra">
          <div class="contacts">
            {contacts && (
            <h4>{contacts.title}</h4>
            <ul class="links">
                 { contacts.items.map((contact) => (
                    <a href={contact.href}>
                      <li> {contact.title} </li>
                    </a>
                  ))}
              </ul>
                  )
              }
          </div>

          <div class="legacy">
            <Redirect>{property?.name}</Redirect>
            <span class="declaration"
              >Copyright Â© 2025 elysee Mboussa . All rights reserved.</span
            >
          </div>
        </div>
      </div>

      <div class="right">
        <div class="contact">
          <div class="info">
            { links && (
              <h4>{links.title} </h4>
              <ul class="links">
                {
                  links &&
                    links.items.map((link) => (
                      <a href={link.href}>
                        <li> {link.title} </li>
                      </a>
                    ))
                }
              </ul>
            )
          }
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style scoped>
  
  footer * {
    font-size: 0.8rem ;
    font-family: "JetBrains Mono" !important;
  }

  footer h4 {
    padding-block: 1rem;
    color: var(--muted-foreground);
  }

  footer {
    font-family: "JetBrains Mono";
    display: grid;
    width: 100%;
    height: 630px;
    background-color: var(--background-footer);
    border-top: 1.5px solid var(--border-color);
  }

  footer p {
    padding: 0;
    margin: 0;
    color: var(--color-primary);
    text-wrap: balance;
  }

  footer ul {
    margin: 0;
    padding: 0;
    text-decoration: none;
  }
  footer ul li {
    padding: 0;
    list-style: none;
    margin: 0;
  }

  footer .extra {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4rem;
  }

  .grid {
    display: flex;
    flex-direction: column-reverse;
    align-items: flex-start;
    justify-content: center;
    padding-block: 3rem;
    gap: 3rem;
  }

  footer .grid .left {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 2rem;
    }
  
  @media screen and (min-width: 1200px) {
    footer {
      height: 100%;
    }
    
    footer .grid .left {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 4rem;
      grid-column: 1 / span 3;
    }

    footer .grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      padding-block: 5rem;
    }
  }



  .newsletter {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }



  .contacts ul li  {
    color: var(--color-primary) ;
  }

  .legacy {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: var(--muted-foreground);
  }

  .legacy .declaration {
    font-size: 0.7rem;
    text-wrap: nowrap;
  }

  .legacy a {
    color: var(--color-secondary);
    display: block;
    width: max-content;
  }

  .legacy a:hover {
    text-decoration: underline;
  }

  .info a > * {
    color:  var(--color-primary);
  }

  .links ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links a:hover {
    text-decoration: underline;
  }
</style>
