---
import Redirect from "../Redirect.astro";
type Info = {
  title: string;
  description: string;
};

type Link = {
  title: string;
  href: string;
};

type Property = {
  name: string;
  url: string;
};

interface Props {
  info?: Info;
  links?: {title:string; items: Link[]};
  contacts?: {title:string; items: Link[]};
  property?: Property;
}

const { info, links, contacts, property } = Astro.props;

const locale = Astro.currentLocale?.includes("fr") ? "/" : Astro.currentLocale;
const url = new URL(locale ?? "/en", Astro.url.origin);

---

<footer class="medium text-[0.7rem] uppercase">
    <div class="grid-footer">
      <div class="left">

        <div class="extra">
          <span class="about"> 
           {info?.description}
          </span>
          <div class="contacts">
              <div class="btn-fixed">
                <div class="btn btn-round">
                 
                    <a href={contacts?.items[0].href} class="btn-click magnetic " data-strength="100" data-strength-text="50">
                        <div class="btn-fill"></div>
                        <span style="text-align: center;" class="btn-text">
                            <span class="btn-text-inner">
                              {contacts?.items[0].title}
                            </span>
                        </span>
                    </a>
            </div>
            </div>
          </div>


          <div class="legacy">
            <span class="declaration"
              >
              Copyright Â© <span id="footer-year"></span> elysee Mboussa . All rights reserved.</span
            >
          </div>
        </div>
      </div>

      <div class="right">
        <div class="uppercase">
          <div class="flex flex-col gap-2">
            { links && (
              <h4>{links.title}</h4>
              <ul class="flex flex-col gap-2 text-sm">
                {
                  links &&
                    links.items.map((link) => (
                      <a href={link.href}>
                        <li>{link.title}</li>
                      </a>
                    ))
                }
              </ul>
            )
          }
          </div>
        </div>
      </div>
    </div>
</footer>

<style scoped>
  
  footer {
    font-family: "Work Sans", sans-serif;
  }

  footer h4 {
    padding-block: 1rem;
    color: var(--muted-foreground);
  }

  footer {
    /* font-family: "JetBrains Mono"; */
    display: grid;
   
    margin-top: 10rem ;
  }

  footer p {
    padding: 0;
    margin: 0;
    color: var(--color-primary);
    text-wrap: balance;
  }

  footer ul {
    margin: 0;
    padding: 0;
    text-decoration: none;
  }
  footer ul li {
    padding: 0;
    list-style: none;
    margin: 0;
  }

  footer .extra {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4rem;
  }

  .grid-footer {
    display: flex;
    flex-direction: column-reverse;
    align-items: flex-start;
    justify-content: center;
    padding-block: 3rem;
    gap: 3rem;
  }

  footer .grid-footer .left {
    width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 2rem;
    }
  
  @media screen and (min-width: 1200px) {
    footer {
      height: 100%;
    }
    
    footer .grid-footer .left {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 4rem;
      grid-column: 1 / span 4;
    }

    footer .grid-footer {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      padding-block: 5rem;
    }
  }



  .newsletter {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }



  footer .contacts {
    border-bottom: 1px solid var(--secondary);
    position: relative;
  }
  
  .contacts ul li  {

 
    color: var(--color-primary) ;
  }

  .legacy {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: var(--muted-foreground);
  }

  .legacy .declaration {
    font-size: 0.7rem;
    text-wrap: nowrap;
  }

  .legacy a {
    color: var(--color-secondary);
    display: block;
    width: max-content;
  }

  .legacy a:hover {
    text-decoration: underline;
  }

  .info a > * {
    color:  var(--color-primary);
  }

  .links ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links a:hover {
    text-decoration: underline;
  }

  .extra .about {
    text-wrap: balance;
    width: 300px;
  }
</style>





<script>
  import {onLoadClientRouter} from "@portfolio/ui/client"

  onLoadClientRouter(() => {
    document.getElementById("footer-year").innerText = new Date().getFullYear();
  })
</script>
