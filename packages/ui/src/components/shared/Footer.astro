---
type Info = {
  title: string;
  description: string;
};

type Link = {
  title: string;
  href: string;
};

type Property = {
  name: string;
  url: string;
};

interface Props {
  info?: Info;
  links?: Link[];
  contacts?: Link[];
  property?: Property;
}

const { info, links, contacts, property } = Astro.props;
---

<footer>
  <div class="container">
    <div class="grid">
      <div class="left">
        <div class="info">
          <h4>{info?.title}</h4>
          <p>
            {info?.description}
          </p>
        </div>

        <div class="extra">
          <div class="contacts">
            <h4>contact</h4>
            <ul class="links">
              {
                contacts &&
                  contacts.map((contact) => (
                    <a href={contact.href}>
                      <li> {contact.title} </li>
                    </a>
                  ))
              }
            </ul>
          </div>

          <div class="legacy">
            <a href={property?.url}>{property?.name}</a>
            <span class="declaration"
              >Copyright © 2025 elysee Mboussa. All rights reserved.</span
            >
          </div>
        </div>
      </div>

      <div class="right">
        <div class="contact">
          <div class="info">
            { links && (
              <h4>Réseaux</h4>
              <ul class="links">
                {
                  links &&
                    links.map((link) => (
                      <a href={link.href}>
                        <li> {link.title} </li>
                      </a>
                    ))
                }
              </ul>
            )
          }
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style scoped>
  
  footer * {
    font-family: "JetBrains Mono" !important;
  }

  footer h4 {
    padding-block: 1rem;
    font-size: 1rem;
  }

  footer {
    font-family: "JetBrains Mono";
    display: grid;
    width: 100%;
    height: 630px;
    background-color: #6c6c6c26;
    border-top: 1.5px solid rgba(255, 255, 255, 0.139);
  }

  footer p {
    padding: 0;
    margin: 0;
    color: white;
  }

  footer ul {
    margin: 0;
    padding: 0;
    text-decoration: none;
  }
  footer ul li {
    padding: 0;
    list-style: none;
    margin: 0;
  }

  footer .extra {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4rem;
  }

  .grid {
    display: flex;
    flex-direction: column-reverse;
    align-items: flex-start;
    justify-content: center;
    padding-block: 3rem;
    gap: 3rem;
  }

  footer .grid .left {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 2rem;
    }
  
  @media screen and (min-width: 1200px) {
    footer {
      height: 530px;
    }
    
    footer .grid .left {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 4rem;
      grid-column: 1 / span 3;
    }

    footer .grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      padding-block: 5rem;
    }
  }



  .newsletter {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .newsletter h4 {
    font-weight: 700;
    font-size: 4rem;
    color: white;
    font-family: "Bricolage Grotesque" !important;
  }

  .contacts ul li  {
    color: var(--color-primary) ;
  }

  .legacy {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: white;
  }

  .legacy .declaration {
    font-size: 0.7rem;
  }

  .legacy a {
    color: var(--color-secondary);
    display: block;
    width: max-content;
  }

  .legacy a:hover {
    text-decoration: underline;
  }

  .info a > * {
    color: white !important;
  }

  .links ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links ul li:hover {
    color: var(--contrast-2) !important;
  }

  .links a:hover {
    color: white;
    text-decoration: underline;
  }
</style>
