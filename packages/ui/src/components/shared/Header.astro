---
const locale = Astro.currentLocale?.includes("fr") ? "/" : Astro.currentLocale;
const url = new URL(locale ?? "/en", Astro.url.origin);
---

<header>
  <div class="container">
    <div class="wrapper">
      <div class="flex">
        <div class="logo">
          <a href={url.href}>
            <svg
              width="40"
              height="40"
              id="logo"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 12 12"
            >
              <defs>
                <style>
                  .cls-1,
                  .cls-2 {
                    stroke-width: 0px;
                  }

                  .cls-2 {
                    fill: #007aec;
                  }
                </style>
              </defs>
              <circle class="cls-2" cx="6" cy="6" r="5.5"></circle>
              <path
                class="cls-1"
                d="m6,1c2.76,0,5,2.24,5,5s-2.24,5-5,5S1,8.76,1,6,3.24,1,6,1m0-1C2.69,0,0,2.69,0,6s2.69,6,6,6,6-2.69,6-6S9.31,0,6,0h0Z"
              ></path>
            </svg></a
          >
        </div>
        <slot />
      </div>
    </div>
  </div>
</header>

<style>
  header {
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    width: 100%;
    height: 80px;
    color: var(--color-primary) !important;
  }

  header .wrapper {
    width: 100%;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 1rem;
  }

  header .flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 100%;
    margin: 0;
  }
</style>
