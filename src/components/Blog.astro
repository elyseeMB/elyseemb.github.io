---
import { getCollection } from "astro:content";
import { undefined } from "astro:schema";

const articles = await getCollection("blog");
---

<section class="blog">
  <h3>Mes derniers articles</h3>
  <div class="stack">
    {
      articles
        .filter((article) => article.data.isDraft !== true)
        .sort((a, b) =>
          new Date(a.data.pubDate!).getTime() <
          new Date(b.data.pubDate!).getTime()
            ? 1
            : -1
        )
        .map((article, index) => (
          <a href={`/blog/${article.id}`}>
            <article class="item">
              <div class="item__img">
                <img src={`${article.data.thumbnail}`} alt="" />
              </div>
              <div class="item__info">
                <div class="item__header-number">
                  {index.toString().padStart(2, "0").includes("00") ? (
                    <strong>news</strong>
                  ) : (
                    index.toString().padStart(2, "0")
                  )}
                </div>
                <h3>{article.data.title}</h3>
                <div class="meta">
                  <span>
                    {new Intl.DateTimeFormat(undefined, {
                      dateStyle: "medium",
                    }).format(article.data.pubDate)}
                    Â· {article.data.author.id}
                  </span>
                </div>
                <p class="item__description">{article.data.summary}</p>
              </div>
              <div class="item__header-icon">&DownArrow;</div>
            </article>
          </a>
        ))
    }
  </div>
</section>

<style>
  .blog {
    padding-bottom: 5rem;
  }

  .blog a {
    display: inline-flex;
  }
  .blog h3 {
    font-weight: 900;
    font-size: 4rem;
  }
</style>
