<style>
  .info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .icon {
    width: 25px;
    height: 25px;
  }

  img.hero-img {
    width: 100%;
    max-width: 500px;
    height: auto;
    display: block;
    object-fit: cover;
  }

  @media screen and (min-width: 1350px) {
    .description {
      max-width: 650px !important;
    }
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
  }

  strong {
    font-weight: 700;
  }

  /* Desktop (769px et plus) */
  @media only screen and (min-width: 769px) {
    .wrapper {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(max(500px, 100%), 1fr));
      place-items: flex-start;
      justify-items: anchor-center;
      /* gap: 4rem; */
    }
  }
  .left {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    font-size: 0.9rem;
  }

  form.label input {
    background: transparent;
    border: none;
    outline: none;
    color: white;
  }

  input::placeholder {
    color: rgba(255, 255, 255, 0.484);
  }

  .icon {
    width: 24px;
    height: 24px;
  }
</style>
